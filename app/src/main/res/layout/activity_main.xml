<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#fff">

    <TextView
            android:text="@string/x_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/turn_text"
            android:textSize="32sp"
            android:textColor="@color/lightBlue"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="120dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="120dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />

    <GridLayout android:layout_width="300dp" android:layout_height="300dp" android:id="@+id/gridLayout"
                android:columnCount="3" android:rowCount="3"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/turn_text" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.165"
                app:layout_constraintHorizontal_bias="0.505">

        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box1"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box2"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box3"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box4"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box5"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box6"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box7"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box8"/>
        <ImageButton
                style="@style/ttt_box"
                android:src="@android:color/transparent"
                android:contentDescription="@string/box"
                android:layout_width="100dp"
                android:layout_height="100dp" tools:layout_editor_absoluteY="257dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/ttt_box9"/>

    </GridLayout>
    <ImageView
            android:src="@drawable/board"
            android:contentDescription="@string/board"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/board_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/turn_text"
            app:layout_constraintVertical_bias="0.14" android:visibility="visible"/>
    <Button
            android:text="@string/restart"
            android:layout_width="135dp"
            android:layout_height="48dp"
            android:id="@+id/restart_button"
            android:visibility="gone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/board_image" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.268"/>

</android.support.constraint.ConstraintLayout>